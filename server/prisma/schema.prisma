// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  email       String     @unique
  password    String
  fulName     String
  mainAccount Int?       
  jwt         JwtKey[]
  income      Income[]
  expenses    Expenses[]
}

model JwtKey {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  privateKey  String
  publicKey   String
  accessToken String
  user        User   @relation(fields: [userId], references: [id])
  userId      String @unique @db.ObjectId

  @@unique([id, userId])
}

model Income {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  status    String   @default("Income")
  ammount   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId

  @@unique([id, userId])
}

model Expenses {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  status    String   @default("Expenses")
  ammount   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId

  @@unique([id, userId])
}
